<h1>Rating statistics</h1>

<div class="row">
	<div class="col-md-4">
		<h2> Best beers </h2>
		<%= render 'top_table', objects: @top_beers %>
	</div>
	<div class="col-md-4">
		<h2> Best breweries </h2>
		<%= render 'top_table', objects: @top_breweries %>
	</div>
	<div class="col-md-4">
		<h2> Best styles </h2>
		<%=  render 'top_table', objects: @top_styles %>
	</div>
</div>
<div class="row">
	<div class="col-md-12">
		<h2>Most active users</h2>
		<table class="table table-hover">
			<thead>
				<tr>
					<th></th>
					<th>favorite beer</th>
					<th>prefered style</th>
					<th>favorite brewery</th>
					<th>ratings</th>
				</tr>
			</thead>
			<tbody>
				<% User.top(3).each do |user| %>
				<tr> 
					<td> <%= link_to user.username, user %> </td>
					<td> <%= link_to user.favorite_beer, user.favorite_beer %> </td>
					<td> <%= link_to user.favorite_style, user.favorite_style %> </td>
					<td> <%= link_to user.favorite_brewery.name, user.favorite_brewery %> </td>
					<td> <%= user.ratings.count %> </td>

				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>
<div class="row">
	<div class="col-md-4">
		<h2>Recent ratings</h2>
		<ul>
			<% @recent_ratings.each do |rating| %>
			<li><%= rating %> by <%= link_to rating.user.username, rating.user %></li>
			<% end %>
		</ul>
	</div>
</div>