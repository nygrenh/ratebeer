<p id="notice"><%= notice %></p>

<h1>
  <%= @beer_club.name %>
</h1>

<p>
Founded in
  <%= @beer_club.founded %>
</p>

<p>
  <strong>City:</strong>
  <%= @beer_club.city %>
</p>

<h2> Members </h2>
<ul>
<% @beer_club.members.each do |member| %>
<li> <%= link_to member.username, member %> </li>
<% end %>
</ul>

<%= link_to 'Edit', edit_beer_club_path(@beer_club) if current_user %> 
<%= link_to 'Destroy', @beer_club, method: :delete, data: { confirm: 'Are you sure?' } if current_user.admin %>
