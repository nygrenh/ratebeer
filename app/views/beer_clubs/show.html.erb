<p id="notice"><%= notice %></p>

<h1>
  <%= @beer_club.name %>
</h1>

<p>
Founded in
  <%= @beer_club.founded %>
</p>

<p>
  <strong>City:</strong>
  <%= @beer_club.city %>
</p>

<h2> Members </h2>
<ul>
<% @beer_club.members.each do |member| %>
<li> <%= link_to member.username, member %> </li>
<% end %>
</ul>
<% if current_user and not @beer_club.is_a_member(current_user.id) %>
 <%= form_for(@membership) do |f| %>
    <%= f.hidden_field :beer_club_id %>
    <%= f.submit value:"join the club" %>
 <% end %>
<% end %>
<%= link_to 'Edit', edit_beer_club_path(@beer_club) if current_user %> 
<%= link_to 'Destroy', @beer_club, method: :delete, data: { confirm: 'Are you sure?' } if current_user and current_user.admin %>
